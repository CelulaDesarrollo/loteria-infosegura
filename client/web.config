<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        
        <!-- Gzip compression settings -->
        <httpCompression directory="%SystemDrive%\inetpub\temp\IIS Temporary Compressed Files" dynamicCompressionBeforeCache="true">
            <scheme name="gzip" dll="%Windir%\system32\inetsrv\gzip.dll" staticCompressionLevel="9" />
            <dynamicTypes>
                <add mimeType="text/html" enabled="true" />
                <add mimeType="text/plain" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="application/x-javascript" enabled="true" />
            </dynamicTypes>
            <staticTypes>
                <add mimeType="text/html" enabled="true" />
                <add mimeType="text/plain" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="application/x-javascript" enabled="true" />
                <add mimeType="*/*" enabled="false" />
            </staticTypes>
        </httpCompression>

        <!-- Static file caching -->
        <staticContent>
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
        </staticContent>

        <!-- URL REWRITE RULES: La clave para el routing de SPA/Next.js estático -->
        <rewrite>
            <rules>
                <!--
                REGLA CLAVE: SPA Catch-all
                Si la URL solicitada NO CORRESPONDE a un archivo o directorio físico, 
                reescribe la solicitud internamente a /index.html para que el router de Next.js tome el control.
                -->
                <rule name="SPA Rewrite To Index" stopProcessing="true">
                    <match url="^(.*)$" />
                    <conditions logicalGrouping="MatchAll">
                        <!-- Condición: La solicitud NO DEBE ser un archivo existente -->
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <!-- Condición: La solicitud NO DEBE ser un directorio existente -->
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <!-- Condición: EXCLUIR explícitamente la carpeta de assets de Next.js por seguridad. -->
                        <add input="{REQUEST_URI}" pattern="^_next" negate="true" />
                    </conditions>
                    <!-- ACCIÓN: Reescritura absoluta a index.html en la raíz -->
                    <action type="Rewrite" url="/index.html" />
                </rule>
            </rules>
        </rewrite>

        <!-- Headers de seguridad -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="DENY" />
                <add name="X-XSS-Protection" value="1; mode=block" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Documento por defecto (asegura que index.html sea el punto de entrada) -->
        <defaultDocument enabled="true">
            <files>
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>
    </system.webServer>
</configuration>