<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!--
        PASO 1: Asegurar que el módulo URL Rewrite esté instalado y habilitado en IIS.
        -->

        <!-- Gzip compression settings (ajustado para mayor robustez) -->
        <httpCompression directory="%SystemDrive%\inetpub\temp\IIS Temporary Compressed Files" dynamicCompressionBeforeCache="true">
            <scheme name="gzip" dll="%Windir%\system32\inetsrv\gzip.dll" staticCompressionLevel="9" />
            <dynamicTypes>
                <add mimeType="text/html" enabled="true" />
                <add mimeType="text/plain" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="application/x-javascript" enabled="true" />
            </dynamicTypes>
            <staticTypes>
                <add mimeType="text/html" enabled="true" />
                <add mimeType="text/plain" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="application/x-javascript" enabled="true" />
                <add mimeType="*/*" enabled="false" />
            </staticTypes>
        </httpCompression>

        <!-- Static file caching -->
        <staticContent>
            <!-- CORRECCIÓN DEL ERROR 500.19: cacheControlMaxAge debe ser un TimeSpan (d.hh:mm:ss).
                 31536000 segundos (1 año) se convierte a 365 días: 365.00:00:00 -->
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
            <!-- Dejamos las declaraciones de mimeMap comentadas a menos que sean necesarias, IIS generalmente las tiene por defecto -->
            <!-- <mimeMap fileExtension=".js" mimeType="application/javascript" /> -->
            <!-- <mimeMap fileExtension=".json" mimeType="application/json" /> -->
        </staticContent>

        <!-- URL REWRITE RULES: La clave para el routing de SPA -->
        <rewrite>
            <rules>
                <!--
                REGLA CLAVE: SPA Catch-all
                Si la URL solicitada NO CORRESPONDE a un archivo físico (como .js, .css, .png, etc.)
                o a un directorio físico, reescribe la solicitud internamente a index.html.
                Esto permite que el router de tu aplicación (React/Next.js) maneje la ruta (/room/main_loteria).
                -->
                <rule name="SPA Rewrite To Index" stopProcessing="true">
                    <!-- Captura cualquier URL -->
                    <match url="^(.*)$" />
                    <conditions logicalGrouping="MatchAll">
                        <!-- Condición: La solicitud NO DEBE ser un archivo existente -->
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <!-- Condición: La solicitud NO DEBE ser un directorio existente -->
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <!-- Acción: Reescribe internamente a index.html. La URL en el navegador NO cambia. -->
                    <action type="Rewrite" url="index.html" />
                </rule>
                
                <!-- Se eliminan las otras dos reglas (NextJS_Assets y PublicFiles) ya que son redundantes.
                     Si la regla "SPA Rewrite To Index" funciona, las solicitudes a archivos estáticos
                     (como /_next/static/...) pasan la condición (IsFile es TRUE), la regla se salta,
                     y StaticFileHandler de IIS sirve el archivo estático correctamente. -->
            </rules>
        </rewrite>

        <!-- Headers de seguridad -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="DENY" />
                <add name="X-XSS-Protection" value="1; mode=block" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Documento por defecto (asegura que index.html sea el punto de entrada) -->
        <defaultDocument enabled="true">
            <files>
                <!-- CORRECCIÓN DEL ERROR 500.19 (0x800700b7): El error se debe a que 'index.html' ya fue
                     agregado por la configuración global de IIS. Para evitar la duplicidad:
                     1. Borramos la lista de documentos por defecto a nivel local con <clear/>.
                     2. Agregamos SOLAMENTE 'index.html' de nuevo. -->
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>
    </system.webServer>
</configuration>